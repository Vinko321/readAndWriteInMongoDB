<!DOCTYPE html>
<html lang="en">
<head>
    <title>OK Matulji</title>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
<div id="home">
    <!-- ##### Header Area Start ##### -->
    <%- include ('../partials/header.ejs') %>

</div>
<!-- ##### home End ##### -->
<section id="contact">
    <div id="contact-us" class="parallax">
        <div class="container">
            <div class="row">
                <div class="heading text-center col-sm-8 col-sm-offset-2 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                    <h2>Unesite novog igrača</h2>
                    <p>Popunite sva polja</p>
                </div>
            </div>
            <form id="frmNewPlayer" name="frmNewPlayer" action="/igrac" method="post">
                <div class="contact-form wow fadeIn" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="row">
                        <div class="col-sm-10">

                            <div class="row  wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input  type="text" name="punoIme" id="punoIme" placeholder="Puno Ime" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" name="pozicija" id="pozicija" placeholder="Pozicija" class="form-control" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row  wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" name="uzrast" id="uzrast" placeholder="Uzrast" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" name="visina" id="visina" placeholder="Visina" class="form-control" required/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button  type="submit" id="btnSubmit" name="submitNew" class="<%= cssBtn%>" >Pošalji</button>
                            </div>
                            <div class="form_status"><%= poruka%></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section><!--/#contact-->

<%- include ('../partials/footer.ejs') %>
<script>
    function submitForm() {
        document.frmNewPlayer.submit();
        document.getElementById("btnSubmit").disabled = true;
    }
</script>
</body>
</html>